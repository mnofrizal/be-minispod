# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/paas_db"
# Redis Configuration for Bull Queues
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Job Scheduler Configuration
HEALTH_CHECK_INTERVAL="*/2 * * * *"
METRICS_COLLECTION_INTERVAL="*/5 * * * *"
CLEANUP_INTERVAL="0 2 * * *"
WORKER_HEARTBEAT_TIMEOUT_MINUTES=5
WORKER_INACTIVE_TIMEOUT_MINUTES=10

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Kubernetes Configuration
KUBECONFIG_PATH="/path/to/kubeconfig"
K8S_NAMESPACE_PREFIX="customer-"
K8S_CLUSTER_DOMAIN="yourdomain.com"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret"
WEBHOOK_TIMEOUT=30000

# Monitoring Configuration
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Midtrans Payment Gateway Configuration
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_IS_PRODUCTION=false

# Frontend Configuration (for payment callbacks)
FRONTEND_URL="http://localhost:3100"

